#!/usr/bin/env python3
# https://github.com/ifor2u/specbase

import json

file = open("/etc/passwd", "r+")

list = {}
while True:
  line = file.readline()
  if not line:
    break
  tokens = line.rstrip().split(":")
  user = {}
  user["uid"] = tokens[2]
  user["gid"] = tokens[3]
  user["comment"] = tokens[4]
  user["home"] = tokens[5]
  user["shell"] = tokens[6]
  list[tokens[0]] = user

print(json.dumps(list))
